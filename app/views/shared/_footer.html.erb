<footer>
  <div>
    <%= link_to root_path do %>
        <%= image_tag("deforestation-word-logo.png", {:style => "width:200px; filter: drop-shadow(3px 3px 5px #303E34);"}) %>
    <% end %>
  </div>
  <div>
  <a href="#" data-bs-toggle="modal" data-bs-target="#ContactModal">Contact us</a>
  <%# <button type="button" data-toggle="modal" data-target="#ContactModal"><h3>Contact us if you have issues</h3></button> %>
  </div>
</footer>



 <%# the modal  %>
<div class="modal fade" id="ContactModal" tabindex="-1" data-bs-keyboard="false" data-bs-backdrop="static" role="dialog" aria-labelledby="ContactModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header ContactModalBackground">
        <a class="modal-title" id="ContactModalLabel" href="#" target="_blank"><img class="project-logo-prev" src="./images/Recruitment/HEADTRADE.png" alt="Recruitment logo"></a>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body ContactModalBackground">

        <form
          action="https://formspree.io/f/xbjegjaz"
          method="POST"
          enctype="multipart/form-data"
        >
          <label>
            Your email:
            <input type="email" name="email">
          </label>
          <label>
            Your message:
            <textarea name="message"></textarea>
          </label>
          <label>
            Your file:
            <input type="file" name="upload">
          </label>
          <button type="submit">Send</button>
        </form>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>









<style>
footer{
  display: flex;
  position: absolute;
  bottom: 0;
  width: 100%;
  backgorund-color: #425c75;
  height: 300px;
}
</style>
